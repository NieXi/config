    email = xilemon3@gmail.com
    name = NieXi
[core]
	editor = gvim -f
    quotepath = false
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

    st = status

    br = branch
    co = checkout

    cm = commit -v
    cma = commit --amend
    rs = reset
    rsm = reset --soft  # 软重置
    rhm = reset --hard  # 硬重置
    df = diff
    mnf = merge --no-ff # 不使用快速合并

    sa = stash apply # 应用第一个或指定 stash
    sd = stash drop # 删除第一个或指定 stash
    sve = stash save # 保存已经 add 的变更
    sk = stash save -k # 不保存已经 add 的变更 --keep-index
    su = stash save -u # 保存所有变更  --include-untracked
    signore = stash save -a # 保存所有文件，包含 .gitignore 忽略的文件 --all 
    sl = stash list
    sshow = stash show
    sp = stash pop
    sc = stash clear

    cdf = clean -d -f # 清空未跟踪的文件

[gui]
    encoding = utf-8
[i18n]
    commitencoding = utf-8
    logoutputencoding = utf-8
[i18n "commit"]
    encoding = utf-8
[winUpdater]
    recentlySeenVersion = 2.21.0.windows.1
[diff]
    tool = bc4
[difftool]
    prompt = false
[difftool "bc4"]
    cmd = "\"C:/Program Files/Beyond Compare 4/BComp.exe\" \"$LOCAL\" \"$REMOTE\""
[merge]
    tool = bc4
[mergetool]
    prompt = false
    keepBackup = false #禁用时用 mergetool 解决冲突时会产生 *.orig 的功能
[mergetool "bc4"]
    cmd = "\"C:/Program Files/Beyond Compare 4/BComp.exe\" \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\""
[difftool "sourcetree"]
    cmd = '' \"$LOCAL\" \"$REMOTE\"
[mergetool "sourcetree"]
    cmd = "'' "
    trustExitCode = true

[commit]
    template = ~/.gitmessage

